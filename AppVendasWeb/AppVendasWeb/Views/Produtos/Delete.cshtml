@model AppVendasWeb.Models.Produto

@{
	ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<div>
	<h4>Produto</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Descricao)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Descricao)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Preco)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Preco)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Categoria)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Categoria.CategoriaNome)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="ProdutoId" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a class=" m-2 btn btn-light" asp-action="Index">Voltar</a>
